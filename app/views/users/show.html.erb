<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User Info</h2>
        <%#= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
        <table class="table">
          <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@user) do %>
          <i class= "btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>

        <h2 class="mt-3">New Book</h2>
        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
            <!--<lavel for= "book_title">Title</lavel>-->
            <%= f.label :Title %>
            <%= f.text_field :title, class: "col-md-12" %>
          </div>
          <div class="form-group">
            <!--<lavel for= "book_opinion">Opinion</lavel>-->
            <%= f.label :Opinion %>
            <%= f.text_field :Body, class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
                </td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Edit", edit_book_path(book) %></td>
                <td><%= link_to "Destroy", book_path, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>